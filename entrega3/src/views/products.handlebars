<h1>Lista de Productos</h1>

<div id="product-container">
    {{#each result.docs}}
    <div class="product-card">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p>Precio: ${{price}}</p>
        <p>Stock: {{stock}}</p>
        <p>Categoría: {{category}}</p>

    </div>
    {{/each}}
</div>

<!-- Paginación -->
<div id="paginas">
    {{#if result.hasPrevPage}}
        <a href="{{result.prevLink}}">Anterior</a>
    {{/if}}

    <span>Página {{result.page}} de {{result.totalPages}}</span>

    {{#if result.hasNextPage}}
        <a href="{{result.nextLink}}">Siguiente</a>
    {{/if}}
</div>

<style>
  #product-container {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
  }

  .product-card {
    border: 1px solid #ccc;
    padding: 15px;
    margin: 10px;
    width: 200px;
    text-align: center;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
  }
</style>
